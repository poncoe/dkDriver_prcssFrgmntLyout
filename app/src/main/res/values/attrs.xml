<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomNavigationBar">
        <attr name="inactiveTabColor" format="color"/>
        <attr name="activeTabColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DachshundTabLayout">
        <attr name="ddIndicatorHeight" format="dimension" />
        <attr name="ddIndicatorColor" format="color" />
        <attr name="ddAnimatedIndicator" format="enum">
            <enum name="dachshund" value="0" />
            <enum name="pointMove" value="1" />
            <enum name="lineMove" value="2" />
            <enum name="pointFade" value="3" />
            <enum name="lineFade" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="VerifyCodeView">
        <attr name="vcTextColor" format="color|reference" />
        <attr name="vcTextSize" format="integer" />
        <attr name="vcLineWidth" format="dimension" />
        <attr name="vcFont" format="string|reference" />
        <attr name="vcLineStyle" >
            <enum name="noLine" value="0" />
            <enum name="underText" value="1" />
        </attr>
    </declare-styleable>

</resources>